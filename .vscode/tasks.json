{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load Project (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "mkdir -p build/Debug && cd build/Debug && cmake ../.. -DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "( if not exist build (mkdir build ) ) & cd build & cmake ../.. -DCMAKE_BUILD_TYPE=Debug"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Load Project (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "mkdir -p build/Release && cd build/Release && cmake ../.. -DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "( if not exist build (mkdir build ) ) & cd build & cmake .. -DCMAKE_BUILD_TYPE=Release"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Build Project (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build/Debug || (mkdir -p build/Debug && pushd . && cd build/Debug && cmake ../.. -DCMAKE_BUILD_TYPE=Debug && popd) ); cmake --build build/Debug --config Debug --parallel $(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "(if not exist \"build\" (mkdir build && cd build && cmake ..) ) & cmake --build \"${workspaceFolder}/build\" --parallel %NUMBER_OF_PROCESSORS%"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": "$msCompile",
            }
        },
        {
            "label": "Build Project (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build/Release || (mkdir -p build/Release && pushd . && cd build && cmake ../.. -DCMAKE_BUILD_TYPE=Release && popd) ); cmake --build build/Release --config Release --parallel $(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "(if not exist \"build\" (mkdir build && cd build && cmake ..) ) & cmake --build \"${workspaceFolder}/build\" --config Release --parallel %NUMBER_OF_PROCESSORS%"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": "$msCompile",
            }
        },
        {
            "label": "Load And Build Project (Debug)",
            "type": "shell",
            "command": "echo",
            "args": [
                "Load And Build Project (Debug) - Done",
            ],
            "group": "build",
            "dependsOn": [
                "Load Project (Debug)",
                "Build Project (Debug)"
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "Load And Build Project (Release)",
            "type": "shell",
            "command": "echo",
            "args": [
                "Load And Build Project (Release) - Done",
            ],
            "group": "build",
            "dependsOn": [
                "Load Project (Release)",
                "Build Project (Release)"
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "Run Project (Debug)",
            "type": "shell",
            "command": "./CameraDemo",
            "options": {
                "cwd": "${workspaceFolder}/build/Debug"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "Build Project (Debug)"
            ],
            "windows": {
                "command": ".\\CameraDemo.exe",
                "problemMatcher": "$msCompile",
            }
        },
        {
            "label": "Run Project (Release)",
            "type": "shell",
            "command": "./CameraDemo",
            "options": {
                "cwd": "${workspaceFolder}/build/Release"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "Build Project (Release)"
            ],
            "windows": {
                "command": ".\\CameraDemo.exe",
                "problemMatcher": "$msCompile",
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "git clean -fdx build || rm -rf build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "git clean -fdx build || rmdir /s /q build"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        }
    ]
}